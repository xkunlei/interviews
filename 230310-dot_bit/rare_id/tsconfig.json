{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2016",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2019",
            "es2018.promise",
            "ES2020.Promise",
            "es2021.Promise"
        ],
        "composite": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "strict": false,
        "skipLibCheck": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "references": [
    ]
}